<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:fitsSystemWindows="true"
    tools:context=".activities.SplashScreen">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/dept_title"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:src="@drawable/department_reduced" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/rotator_one_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="rotating"
            app:srcCompat="@drawable/ic_group_four" />

        <ImageView
            android:id="@+id/rotator_two_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="rotating"
            app:srcCompat="@drawable/ic_group_two" />

        <ImageView
            android:id="@+id/rotator_three_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="rotating"
            app:srcCompat="@drawable/ic_group_three" />

        <ImageView
            android:id="@+id/rotator_four_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="rotating"
            app:srcCompat="@drawable/ic_group_four" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/rotator_five_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="rotating"
        android:src="@drawable/sankalan_name_reduced" />


</RelativeLayout>