<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    android:layout_margin="8dp"
    app:cardUseCompatPadding="false"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_animation"
        android:orientation="horizontal"
        android:padding="4dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_title_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/valo_wars"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/event_type_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_title_card"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/non_technical"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/event_nos_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_type_card"
                android:layout_marginStart="20dp"

                android:drawablePadding="3dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/team"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:drawableLeftCompat="@drawable/ic_baseline_group_24" />

            <TextView
                android:id="@+id/event_venue_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:drawablePadding="3dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/venue"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:drawableLeftCompat="@drawable/ic_baseline_location_on_24" />

            <TextView
                android:id="@+id/event_timing_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:drawablePadding="3dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:lines="1"
                android:text="@string/valo_wars_time"
                android:textColor="#28917E"
                android:textSize="14sp"
                app:drawableLeftCompat="@drawable/ic_baseline_time_24" />


        </androidx.appcompat.widget.LinearLayoutCompat>


        <ImageView
            android:id="@+id/event_poster_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/valo_wars" />

    </LinearLayout>


</androidx.cardview.widget.CardView>

