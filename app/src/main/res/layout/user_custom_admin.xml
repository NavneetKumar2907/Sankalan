<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/admin_user_name"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COD" />

            <TextView
                android:id="@+id/admin_user_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Technical" />

            <TextView
                android:id="@+id/admin_user_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team" />

            <TextView
                android:id="@+id/admin_user_institute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ONLINE" />

            <TextView
                android:id="@+id/admin_user_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:00pm" />

            <TextView
                android:id="@+id/admin_user_isVerified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navneet Kumar" />

            <TextView
                android:id="@+id/admin_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What its about.----------------------------------------------------------------------------------------------" />

            <TextView
                android:id="@+id/admin_user_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rules\n---------------------\n-----------------------\n----------------------------" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_admin_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="3dp"
                android:contentDescription="@string/edit"
                android:enabled="false"
                android:text="@string/edit"
                app:icon="@drawable/ic_baseline_edit_24" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_admin_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:contentDescription="Delete"
                android:enabled="false"
                android:text="Delete"
                app:icon="@drawable/ic_baseline_delete_24" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>